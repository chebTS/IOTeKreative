<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ekreative.iotekreative.activities.MainActivity">



    <LinearLayout
        android:padding="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.ekreative.iotekreative.views.VerticalSeekBar
            android:id="@+id/left"
            android:max="2048"
            android:progress="1024"
            android:thumbOffset="25dp"
            android:thumb="@drawable/icon_wheel_side"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Spinner
                android:layout_margin="40dp"
                android:id="@+id/spinner"
                android:layout_width="180dp"
                android:layout_height="wrap_content" />

            <ToggleButton
                android:id="@+id/btn_fire"
                android:textSize="36sp"
                android:padding="10dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textOff="FIRE"
                android:textOn="STOP"/>

            <SeekBar
                android:id="@+id/servo"
                android:padding="40dp"
                android:max="180"
                android:progress="0"
                android:thumb="@android:drawable/ic_menu_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <com.ekreative.iotekreative.views.VerticalSeekBar
            android:id="@+id/right"
            android:max="2048"
            android:progress="1024"
            android:thumbOffset="25dp"
            android:thumb="@drawable/icon_wheel_side"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>
</RelativeLayout>
